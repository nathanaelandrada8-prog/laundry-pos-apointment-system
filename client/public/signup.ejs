<div class="flex items-center justify-center min-h-screen bg-gray-50">
    <div class="w-full max-w-md p-8 space-y-6 bg-white shadow-xl rounded-2xl sm:p-10">
        <div class="text-center">
            <h2 class="text-3xl font-extrabold text-gray-900">
                Create Your Laundry Account
            </h2>
            <p class="mt-2 text-sm text-gray-600">
                Start managing your laundry schedule today.
            </p>
        </div>

        <!-- Message Box for Feedback -->
        <div id="message-box" class="p-3 text-sm rounded-lg" style="display:none;"></div>

        <form id="signupForm" class="mt-8 space-y-6" action="#" method="POST">
            <div>
                <label for="name" class="block text-sm font-medium text-gray-700">Full Name</label>
                <input id="name" name="name" type="text" autocomplete="name" required
                    class="appearance-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm"
                    placeholder="John Doe">
            </div>

            <div>
                <label for="email" class="block text-sm font-medium text-gray-700">Email address</label>
                <input id="email" name="email" type="email" autocomplete="email" required
                    class="appearance-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm"
                    placeholder="you@example.com">
            </div>

            <div>
                <label for="password" class="block text-sm font-medium text-gray-700">Password</label>
                <input id="password" name="password" type="password" autocomplete="new-password" required
                    class="appearance-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm"
                    placeholder="••••••••">
            </div>

            <div>
                <button type="submit" id="signupButton"
                    class="relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition duration-150 ease-in-out">
                    Register
                </button>
            </div>
        </form>

        <div class="text-center">
            <p class="text-sm text-gray-600">
                Already have an account?
                <a href="/login" class="font-medium text-indigo-600 hover:text-indigo-500">
                    Sign in here
                </a>
            </p>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', () => {
        const form = document.getElementById('signupForm');
        const messageBox = document.getElementById('message-box');
        const signupButton = document.getElementById('signupButton');

        // Function to display messages
        function displayMessage(message, isSuccess = false) {
            messageBox.textContent = message;
            messageBox.style.display = 'block';
            messageBox.className = 'p-3 text-sm rounded-lg ' + (isSuccess
                ? 'bg-green-100 text-green-800'
                : 'bg-red-100 text-red-800');
        }

        form.addEventListener('submit', async (e) => {
            e.preventDefault();
            messageBox.style.display = 'none'; // Hide previous messages
            signupButton.disabled = true;
            signupButton.textContent = 'Registering...';

            const name = document.getElementById('name').value;
            const email = document.getElementById('email').value;
            const password = document.getElementById('password').value;

            try {
                const response = await fetch('/api/auth/register', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ name, email, password }),
                });

                const data = await response.json();

                if (response.ok) {
                    displayMessage(data.message || 'Registration successful!', true);
                    
                    // Redirect the user on successful login
                    if (data.redirectTo) {
                        setTimeout(() => {
                            window.location.href = data.redirectTo;
                        }, 1500); 
                    }
                } else {
                    // Handle non-2xx status codes (e.g., 400, 409, 500)
                    const errorMessage = data.message || 'An unknown error occurred during registration.';
                    displayMessage(errorMessage, false);
                }

            } catch (error) {
                console.error('Network Error:', error);
                displayMessage('Network error: Could not connect to the server.', false);
            } finally {
                signupButton.disabled = false;
                signupButton.textContent = 'Register';
            }
        });
    });
</script>