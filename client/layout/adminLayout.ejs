<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin | Nathanael's LS</title>
    <link rel="icon" type="img/png" href="/assets/laundry-logo.png">
    <link rel="stylesheet" href="/assets/css/layout.css">
    <link rel="stylesheet" href="/assets/css/admin.css">
    <script src="https://kit.fontawesome.com/e43a3a2fb8.js" crossorigin="anonymous"></script>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
    <nav id="sidebar" class="sidebar">
        <div class="logo-container">
            <img src="/assets/laundry-logo.png" alt="natnatlogo">
            <span>Nathanael's LS</span>
        </div>
        <div class="flex-grow">
            <a href="/admin/dashboard" class="nav-link <%= contentPartial === 'admin/dashboard' ? 'active-bg' : '' %>">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 01-1-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 01-1 1z"></path>
                </svg>
                <span class="nav-link-text">Dashboard</span>
            </a>
            
            <a href="/admin/pos" class="nav-link <%= contentPartial === 'admin/pos' ? 'active-bg' : '' %>">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v3m0 0v3m0-3h3m-3 0H9m12 0a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                <span class="nav-link-text">Pos System</span>
            </a>

            <a href="/admin/pending" class="nav-link <%= contentPartial === 'admin/pending' ? 'active-bg' : '' %>">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <circle cx="12" cy="12" r="9" stroke-width="2"></circle>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 7v5l3 2"></path>
                </svg>
                <span class="nav-link-text">Pending Requests</span>
            </a>
        </div>

        <!-- Footer/Logout -->
        <div class="border-t">
            <button id="userLogoutLink"
                class="nav-link">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path></svg>
                <span class="nav-link-text">Logout</span>
            </button>
        </div>
    </nav>

    <div id="content-area" class="content-area">
        <header>
            <div>
                <button id="sidebar-toggle">
                    <!-- Icon for Hamburger/Menu -->
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h7"></path></svg>
                </button>
                <div>
                    <span class="font-medium">Welcome, <%= userName || 'User' %></span>
                </div>
            </div>
        </header>

        <main>
            <%- include(contentPartial) %>
        </main>
    </div>

    <%- include('../components/logout-modal.ejs') %>
    
    <!-- Load the JavaScript modules -->
    <script src="/assets/js/toggleSidebar.js"></script>
    <script src="/assets/js/handleLogout.js"></script>
    <script src="/assets/js/pending-orders.js"></script>
</body>
</html>