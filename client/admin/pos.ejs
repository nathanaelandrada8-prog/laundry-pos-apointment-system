<!-- client/admin/pos.ejs -->

<div class="p-4 sm:p-6 lg:p-8">
    <h1 class="text-3xl font-bold text-gray-900 mb-6">Point of Sale (POS)</h1>
    
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        
        <!-- Left Column: Order Entry & Customer Info -->
        <div class="lg:col-span-2 bg-white p-6 rounded-xl shadow-2xl border border-gray-200">
            <h2 class="text-2xl font-semibold text-gray-800 mb-6 border-b pb-2">New Order Entry</h2>

            <!-- Customer Search/Select -->
            <div class="mb-6">
                <label for="customer-search" class="block text-sm font-medium text-gray-700 mb-1">Customer</label>
                <div class="flex space-x-2">
                    <input type="text" id="customer-search" placeholder="Search by name or phone" class="flex-grow px-3 py-2 border border-gray-300 rounded-lg shadow-sm focus:ring-teal-600 focus:border-teal-600">
                    <button type="button" class="bg-teal-500 text-white px-4 py-2 rounded-lg hover:bg-teal-600 transition duration-150">Search</button>
                    <button type="button" class="bg-gray-200 text-gray-800 px-4 py-2 rounded-lg hover:bg-gray-300 transition duration-150">New</button>
                </div>
                <p class="mt-2 text-sm text-gray-600">Selected Customer: <span class="font-bold text-teal-700">Walk-in Customer</span></p>
            </div>

            <!-- Service Selection -->
            <h3 class="text-xl font-medium text-gray-800 mb-4">Add Items</h3>
            <div class="grid grid-cols-3 gap-4">
                <button type="button" data-service="wash-fold" class="service-btn p-4 border border-teal-600 bg-teal-50 text-teal-700 rounded-lg font-semibold hover:bg-teal-100 transition duration-150">
                    Wash & Fold ($1.50/lb)
                </button>
                <button type="button" data-service="dry-clean" class="service-btn p-4 border border-gray-300 rounded-lg font-semibold hover:bg-gray-100 transition duration-150">
                    Dry Cleaning
                </button>
                <button type="button" data-service="ironing" class="service-btn p-4 border border-gray-300 rounded-lg font-semibold hover:bg-gray-100 transition duration-150">
                    Ironing
                </button>
            </div>

            <!-- Item Input (WASH & FOLD) -->
            <div id="wash-fold-input" class="mt-6 p-4 border border-teal-200 bg-teal-50 rounded-lg">
                <label for="wash-fold-weight" class="block text-sm font-medium text-gray-700 mb-1">Weight (in lbs)</label>
                <input type="number" id="wash-fold-weight" value="0" min="0" step="0.5" class="w-24 px-3 py-2 border border-gray-300 rounded-lg focus:ring-teal-600 focus:border-teal-600 inline">
                <button type="button" id="add-wash-fold" class="bg-teal-600 text-white px-4 py-2 rounded-lg ml-3 hover:bg-teal-700 transition duration-150">Add to Cart</button>
            </div>

            <!-- Placeholder for other service inputs -->

        </div>
        
        <!-- Right Column: Cart Summary & Payment -->
        <div class="bg-white p-6 rounded-xl shadow-2xl border border-gray-200">
            <h2 class="text-2xl font-semibold text-gray-800 mb-6 border-b pb-2">Order Summary</h2>
            
            <div id="cart-items" class="space-y-3 mb-6 min-h-[100px] border-b pb-4">
                <p class="text-gray-500 italic">No items added yet.</p>
                <!-- Cart items will be appended here by JS -->
            </div>

            <!-- Totals -->
            <div class="space-y-2 mb-8">
                <div class="flex justify-between text-lg font-medium">
                    <span>Subtotal:</span>
                    <span id="subtotal">$0.00</span>
                </div>
                <div class="flex justify-between text-lg font-medium text-teal-700 border-t pt-2">
                    <span class="font-bold">TOTAL DUE:</span>
                    <span id="total-due" class="font-bold text-2xl">$0.00</span>
                </div>
            </div>

            <!-- Payment Button -->
            <button id="process-payment" class="w-full flex justify-center py-3 px-4 border border-transparent rounded-lg shadow-md text-lg font-medium text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500 transition duration-150">
                Process Payment
            </button>
            <button id="clear-order" class="w-full mt-2 py-2 px-4 border border-gray-300 rounded-lg text-sm text-gray-700 bg-white hover:bg-gray-50 transition duration-150">
                Clear Order
            </button>
        </div>
    </div>
</div>