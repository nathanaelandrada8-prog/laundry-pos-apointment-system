<div class="admin-container">
    <div class="flex justify-between items-end mb-8">
        <div>
            <h1 class="text-3xl font-bold text-gray-900">Pending Requests</h1>
            <p class="text-gray-500">Incoming laundry orders awaiting approval.</p>
        </div>
        <div class="text-right">
            <span class="text-xs font-bold text-gray-400 uppercase tracking-widest">Live Queue</span>
            <div class="text-2xl font-black text-indigo-600" id="pendingCount">0</div>
        </div>
    </div>

    <!-- Table Container -->
    <div id="tableWrapper" class="table-container hidden">
        <table>
            <thead>
                <tr>
                    <th>Order ID</th>
                    <th>Customer</th>
                    <th>Service Type</th>
                    <th>Fulfillment</th>
                    <th>Pickup/Drop-off</th>
                    <th>Est. Total</th>
                    <th>Status</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody id="ordersTableBody">
                <!-- Data injected here -->
            </tbody>
        </table>
    </div>

    <!-- Loading State -->
    <div id="adminLoader" class="flex justify-center py-20">
        <div class="animate-spin rounded-full h-10 w-10 border-b-2 border-indigo-600"></div>
    </div>

    <!-- No Orders State -->
    <div id="noOrders" class="hidden empty-state border-2 border-dashed border-gray-200">
        <div class="mb-4 text-gray-300">
            <svg class="w-12 h-12 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <circle cx="12" cy="12" r="9" stroke-width="2"></circle>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 7v5l3 2"></path>
            </svg>
        </div>
        <h3 class="text-lg font-bold text-gray-800">No Pending Requests</h3>
        <p class="text-gray-500 text-sm">You are all caught up for now.</p>
    </div>
</div>

<!-- Denial Reason Modal (Same as before) -->
<div id="denyModal" class="fixed inset-0 bg-black bg-opacity-50 hidden flex items-center justify-center z-50 p-4">
    <div class="bg-white rounded-xl p-6 w-full max-w-md shadow-2xl">
        <h3 class="text-xl font-bold mb-2">Deny Order</h3>
        <p class="text-sm text-gray-500 mb-4">Provide a reason so the customer knows why their request was declined.</p>
        <textarea id="denyReason" class="w-full border border-gray-200 rounded-lg p-3 h-24 mb-4 focus:ring-2 focus:ring-red-500 outline-none text-sm" placeholder="Reason for denial..."></textarea>
        <div class="flex gap-2">
            <button onclick="closeDenyModal()" class="flex-1 px-4 py-2 border rounded-lg text-sm font-medium">Cancel</button>
            <button onclick="submitDeny()" class="flex-1 px-4 py-2 bg-red-600 text-white rounded-lg text-sm font-bold">Confirm Deny</button>
        </div>
    </div>
</div>